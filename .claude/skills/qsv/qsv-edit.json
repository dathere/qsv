{
  "name": "qsv-edit",
  "version": "13.0.0",
  "description": "Replace the value of a cell specified by its row and column.",
  "category": "utility",
  "command": {
    "binary": "qsv",
    "subcommand": "edit",
    "args": [
      {
        "name": "input",
        "type": "file",
        "required": true,
        "description": ""
      },
      {
        "name": "column",
        "type": "string",
        "required": true,
        "description": ""
      },
      {
        "name": "row",
        "type": "string",
        "required": true,
        "description": ""
      },
      {
        "name": "value",
        "type": "string",
        "required": true,
        "description": ""
      }
    ],
    "options": [
      {
        "flag": "--help",
        "type": "flag",
        "description": "Display this message"
      },
      {
        "flag": "--in-place",
        "type": "flag",
        "description": "Overwrite the input file data with the output. The input file is renamed to a .bak file in the same directory."
      },
      {
        "flag": "--no-headers",
        "type": "flag",
        "description": "Start row indices from the header row as 0 (allows editing the header row)."
      },
      {
        "flag": "--output",
        "type": "string",
        "description": "Write output to <file> instead of stdout."
      }
    ]
  },
  "hints": {
    "streamable": true,
    "memory": "constant"
  },
  "test_file": "https://github.com/dathere/qsv/blob/master/tests/test_edit.rs"
}